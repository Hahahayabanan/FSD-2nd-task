include ../dropdown-option/dropdown-option.pug
include ../option-button/option-button.pug
include ../material-icons/material-icons.pug

mixin dropdown({ selectText = '', options = [], hasButtons = false, width = undefined } = {})
  - let addWidth = ''
  case width
    when 'short'
      - addWidth = 'dropdown_width_short'

  section.dropdown.js-dropdown(class=addWidth)
    .dropdown__arrow
      +material-icons({
        type: 'keyboard_arrow_down', 
        color: 'dark-shade-75',
      })
    .dropdown__select
      span.dropdown__select-text=selectText
    .dropdown__options
      each option in options
        .dropdown__option
          +dropdown-option({ text: option.text, group: option.group, number: option.number })
      if hasButtons
        .dropdown__option-button
          +option-button({ type: 'clear', text: 'Очистить' })
          +option-button({ text: 'apply', text: 'Применить' })


