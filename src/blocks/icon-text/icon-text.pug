mixin icon-text({ image = 'insert_emoticon', title = 'Комфорт', descr = 'Шумопоглощающие стены', hasUnderline = false } = {})
  section.icon-text
    .icon-text__row
      .icon-text__image
        +material-icons(image, {
          'background': 'linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)',
          '-webkit-background-clip': 'text',
          '-webkit-text-fill-color': 'transparent',
          'font-size': '48px'
        })
      .icon-text__text-container            
        p.icon-text__title=title
        p.icon-text__descr=descr
    if hasUnderline 
      .icon-text__underline






