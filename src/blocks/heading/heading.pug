mixin heading({ type = 'h3', text = 'Header', color = undefined, weight = undefined } = {})
  - let colorModifier = ''
  - let weightModifier = ''
  
  case color
    when 'light shade'
      - colorModifier = 'heading_color_light-shade'
  
  case weight
    when 'normal'
      - weightModifier = 'heading_weight_normal'

  p.heading(class = `heading_${type} ${colorModifier} ${weightModifier}`)=text



