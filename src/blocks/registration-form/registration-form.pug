include ../radio-button/radio-button.pug
include ../heading/heading.pug
include ../text-field/text-field.pug
include ../toggle-button/toggle-button.pug
include ../button/button.pug

mixin registration-form( { action='/mock-address/change-me', name='registration-form', method='post' } = {} )
  form.registration-form(action=action name=name method=method)
    .registration-form__wrapper
      .registration-form__heading
        +heading({ type: 'h1', text: 'Регистрация аккаунта' })

      .registration-form__first-name
        +text-field({
          type: 'text',
          name: 'input-email',
          placeholder: 'Имя',
          width: 'full-wide',
        })
      .registration-form__second-name
        +text-field({
          type: 'text',
          name: 'input-email',
          placeholder: 'Фамилия',
          width: 'full-wide',
        })

      .registration-form__radio-buttons
        .registration-form__radio-button
          +radio-button({ name:'registration-form', value:'man', text:'Мужчина', isChecked:'true' })
        .registration-form__radio-button
          +radio-button({ name:'registration-form', value:'woman', text:'Женщина' })

      .registration-form__birthday-heading
        +heading({ type: 'h3', text: 'Дата рождения' })
      
      .registration-form__birthday
        +text-field({
          placeholder: 'ДД.ММ.ГГГГ',
          theme: 'masked'
        })

      .registration-form__login-data-heading
        +heading({ type: 'h3', text: 'Данные для входа в сервис' })

      .registration-form__email
        +text-field({
          type: 'email',
          name: 'input-email',
          placeholder: 'Email',
        })
      .registration-form__password
        +text-field({
          type: 'password',
          name: 'input-email',
          placeholder: 'Пароль',
        })

      .registration-form__toggle-button
        +toggle-button({ name: 'toggle', text: 'Получать спецпредложения' })

      .registration-form__button
        +button({
          styleType: 'long', 
          text: 'Перейти к оплате',
          type: 'submit',
        })   

      .registration-form__login
        p.registration-form__login-text Уже есть аккаунт на Toxin
        +button({
          styleType: 'faint', 
          href:'/mock-address/change-me', 
          text: 'Войти', 
        })
