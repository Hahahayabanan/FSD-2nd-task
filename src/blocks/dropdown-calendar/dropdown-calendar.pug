include ../option-button/option-button.pug
include ../material-icons/material-icons.pug

mixin dropdown-calendar()
  .dropdown-calendar
    .dropdown-calendar__arrow.dropdown-calendar__arrow_back 
      +material-icons('arrow_back')
    .dropdown-calendar__arrow.dropdown-calendar__arrow_forward 
      +material-icons('arrow_forward')
    .dropdown-calendar__buttons
      +option-button('clear', 'Очистить')
      +option-button('apply', 'Применить')