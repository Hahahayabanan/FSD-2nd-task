include ../like-button/like-button.pug

mixin comment(srcAvatar, numOfLikes, aName, date, text)
  section.comment
    .comment__avatar-like-container
      img(class='comment__avatar' src=srcAvatar)
      .comment__like-button
        +like-button(numOfLikes)
    .comment__body-container
      .comment__name=aName
      .comment__date=date
      .comment__text=text






