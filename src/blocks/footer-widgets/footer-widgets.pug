include ../subscription-text-field/subscription-text-field.pug
include ../logotype/logotype.pug
include ../copyright-bar/copyright-bar.pug
include ../vertical-menu/vertical-menu.pug

mixin footer-widgets({ description = 'Description', headingOfBlockSubscribe = 'Subscribe', descriptionOfBlockSubscribe = 'Sub descr', emailFieldPlaceholder = 'Email', textOfCopyrightBlock  = 'copyright', verticalMenus = [] } = {} ) 
  footer.footer-widgets
    .footer-widgets__inner
      ul.footer-widgets__list
        li.footer-widgets__item
          .footer-widgets__logotype
            +logotype()
        li.footer-widgets__item
          p.footer-widgets__description=description
      
      .footer-widgets__menu
        each menu in verticalMenus
          +vertical-menu({ 
            header: menu.heading, 
            links: menu.links
          })

      ul.footer-widgets__list
        li.footer-widgets__item
          +heading({ type: 'h3', text: headingOfBlockSubscribe })
        li.footer-widgets__item
          p.footer-widgets__description=descriptionOfBlockSubscribe
        li.footer-widgets__item
          .footer-widgets__subscription-text-field
            +subscription-text-field({ placeholder: emailFieldPlaceholder })
    .footer-widgets__underline
    section.footer-widgets__copyright-bar      
      +copyright-bar({ text: textOfCopyrightBlock })


