mixin text-field( { type = 'text', name = undefined, theme = undefined, id = undefined, placeholder = '', disabled = false, readonly = false, style = {} } )
  - let addClass = ''
  case theme
    when 'date-field'
      - addClass = 'text-field_dark-placeholder'
    when 'masked'
      - addClass = 'text-field_masked'
      - placeholder = 'ДД.ММ.ГГГГ'
    
  input(
    type=type, 
    name=name, 
    id=id,
    class=`text-field ${addClass}`, 
    placeholder=placeholder 
    disabled=disabled 
    readonly=readonly 
    style=style
  )

