mixin text-field({ type = 'text', name = null, theme = null, placeholder = null, disabled = false, readonly = false, width = null, cursor = null, } = {})

  - let themeModifier = null
  - let sizeModifier = null
  - let cursorTypeModifier = null

  case theme
    when 'dark-placeholder'
      - themeModifier = 'text-field_dark-placeholder'
    when 'masked'
      - themeModifier = 'text-field_masked'
      - placeholder = 'ДД.ММ.ГГГГ'

  case width
    when 'full-wide'
      - sizeModifier = 'text-field_wide'

  case cursor
    when 'pointer'
      - cursorTypeModifier = 'text-field_clickable'

  input(
    type=type
    name=name
    class=`text-field js-text-field ${themeModifier} ${sizeModifier} ${cursorTypeModifier}`
    placeholder=placeholder
    disabled=disabled
    readonly=readonly
  )