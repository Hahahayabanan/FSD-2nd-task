mixin text-field(options)
  input(
    type=options.type, 
    name=options.name, 
    id=options.id,
    class="text-field", 
    class=options.class,
    placeholder=options.placeholder 
    disabled=options.disabled 
    readonly=options.readonly 
  ) 

