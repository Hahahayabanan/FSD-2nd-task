mixin text-field( { type = 'text', name = '', id = '', addClass = '', placeholder = '', disabled = false, readonly = false, style = {} } )
  input(
    type=type, 
    name=name, 
    id=id,
    class='text-field', 
    class=addClass,
    placeholder=placeholder 
    disabled=disabled 
    readonly=readonly 
    style=style
  )

