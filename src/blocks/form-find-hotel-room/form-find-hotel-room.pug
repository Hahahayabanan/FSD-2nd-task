include ../heading/heading.pug
include ../dropdown-date/dropdown-date.pug
include ../dropdown/dropdown.pug
include ../button/button.pug

mixin form-find-hotel-room({ name='form-find-hotel-room', action='/mock-address/change-me', method='get' } = {})
  form.form-find-hotel-room(name=name action=action method=method)
    .form-find-hotel-room__wrapper
      .form-find-hotel-room__heading
        +heading({ type: 'h1', text: 'Найдём номера под ваши пожелания'})
      .form-find-hotel-room__dropdown-date
        +dropdown-date({ firstHeader: 'Прибытие', secondHeader: 'Выезд' })
      .form-find-hotel-room__dropdown
        +heading({ type: 'h3', text: 'Гости' })
        .form-find-hotel-room__dropdown-container
          +dropdown({ type: 'guests'})
      .form-find-hotel-room__button-long
        +button({
          typeOfStyle: 'long', 
          href: '/mock-address/change-me', 
          text: 'Подобрать номер',
          type: 'submit',
        })