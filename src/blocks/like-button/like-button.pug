include ../material-icons/material-icons.pug

mixin like-button({ number = 0, isChecked = false } = {})
  if number < 0
    - number = 0
  .like-button(data-stage = `${isChecked}`)
    .like-button__heart
      +material-icons({
        type: 'favorite_border', 
        color: 'light shade',
        size: 'small'
      })
    span.like-button__label=number


