mixin radio-button({ id = 'radio-button', name = 'radio-button' , value = '', text = 'radio-button', checked = '' } = {})
  input(type='radio' id=id name=name value=value class='radio-button__input' checked=checked)
  label(for=id class='radio-button__label')=text


