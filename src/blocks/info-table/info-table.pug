include ../heading/heading.pug

mixin info-table({ priceOfRoom = 'price', sumPriceOfRoom = 'sum price', numberOfDays = 'number days', numberOfDiscount = 'number discount', inTime = 'суток', priceOfService = 'Service price', advancedServicesPrice = 'adv serv price', finalPrice = 'final price', currency = '₽' } = {})
  table.info-table.js-info-table
    tr.info-table__row
      td.info-table__service
        span.js-info-table__price-of-room=priceOfRoom
        span.info-table__currency=currency + ' x '
        span.js-info-table__number-of-days=numberOfDays
        span.info-table__in-time= ' ' + inTime
      td.info-table__price
        span.js-info-table__summary-price-of-rooms=sumPriceOfRoom
        span.info-table__currency=currency
    tr.info-table__row
      td.info-table__service
        .info-table__discount
          span Сбор за услуги: скидка 
          span.js-info-table__number-of-discount=numberOfDiscount
          span.info-table__currency=currency
          span.info-table__icon i
      td.info-table__price
        .info-table__discount-price
          span.js-info-table__price-of-service=priceOfService
          span.info-table__currency=currency
    tr.info-table__row
      td.info-table__service
        .info-table__advanced
          span.info-table__advanced Сбор за дополнительные услуги
          span.info-table__icon i
      td.info-table__price
        .info-table__advanced-price
          span.js-info-table__advanced-services-price=advancedServicesPrice
          span.info-table__currency=currency
    tr.info-table__row
      td.info-table__service.info-table__service_with-result
        +heading( { type: 'h2', text: 'Итого' }) 
        .info-table__underline
      td.info-table__price.info-table__price_with-result.js-info-table__final-price
        +heading( { type: 'h2', text: finalPrice }) 
        +heading( { type: 'h2', text: '₽' }) 