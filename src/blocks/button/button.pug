include ../material-icons/material-icons.pug

mixin button({ typeOfStyle = 'simple', href = '/mock-address/change-me', text = 'click me', type='', size=undefined } = {})
  - let sizeModifier = ''

  case size
    when 'small'
      - sizeModifier = 'button_size_small'
    when 'big'
      - sizeModifier = 'button_size_big'
    when 'wide'
      - sizeModifier = 'button_size_wide'

  case typeOfStyle
    when 'faint'
      .button.button_faint(class=sizeModifier)
        button(href=href class='button__key')=text
    when 'long'
      button(href=href class='button button_long' class=sizeModifier type=type)=text
        .button__arrow
          +material-icons({
            type: 'arrow_forward', 
            color: 'white',
          })
    default
      button(href=href class=`button button_${typeOfStyle}` class=sizeModifier)=text



