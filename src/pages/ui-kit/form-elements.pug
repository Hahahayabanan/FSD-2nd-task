extends ../index


block variables
  - var pageTitle = 'Form Elements'

block content
  include ../../blocks/logo-ui-kit/logo-ui-kit.pug
  include ../../blocks/text-field/text-field.pug
  include ../../blocks/dropdown/dropdown.pug
  include ../../blocks/dropdown-date/dropdown-date.pug
  include ../../blocks/dropdown-filter-date/dropdown-filter-date.pug
  include ../../blocks/subscription-text-field/subscription-text-field.pug
  include ../../blocks/checkbox-button/checkbox-button.pug
  include ../../blocks/radio-button/radio-button.pug
  include ../../blocks/toggle-button/toggle-button.pug
  include ../../blocks/like-button/like-button.pug
  include ../../blocks/rate-button/rate-button.pug
  include ../../blocks/range-slider/range-slider.pug
  include ../../blocks/button/button.pug
  include ../../blocks/pagination/pagination.pug
  include ../../blocks/dropdown-checkbox/dropdown-checkbox.pug
  include ../../blocks/icon-text/icon-text.pug
  include ../../blocks/rich-checkbox/rich-checkbox.pug
  include ../../blocks/bullet-list/bullet-list.pug
  include ../../blocks/comment/comment.pug
  include ../../blocks/heading/heading.pug


  +logo-ui-kit()
  main.form-elements
    .form-elements__container

      article.form-elements__fields
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'text field')
          +text-field({
            type: 'email',
            name: 'input-email',
            placeholder: 'Email'
          })
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'dropdown')
          +dropdown('guests')
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'masked text field')
          +text-field({
            placeholder: 'ДД.ММ.ГГГГ',
            theme: 'masked'
          })
        .form-elements__wrapper
          +dropdown-date('date dropdown', 'date dropdown')
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'filter date dropdown')
          +dropdown-filter-date()
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'subscription text field')
          +subscription-text-field('Email')

      article.form-elements__check-buttons
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'checkbox buttons')
          .form-elements__checkbox-button
            +checkbox-button('checkbox0', 'Можно курить')
          .form-elements__checkbox-button
            +checkbox-button('checkbox1', 'Можно с питомцами')
          .form-elements__checkbox-button
            +checkbox-button('checkbox2', 'Можно пригласить гостей (до 10 человек)')
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'radio button')
          .radio-button
            +radio-button({id:'contactChoice1', name:'contact', value:'man', text:'Мужчина', checked:'true'})
            +radio-button({id:'contactChoice2', name:'contact', value:'woman', text:'Женщина'})
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'toggle button')
          +toggle-button('togglewoggle', 'Получать спецпредложения')
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'like button')
          +like-button(2)
          .form-elements__like-button
            +like-button(12)
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'rate button')
          +rate-button('rate01', 4)
          .form-elements__rate-button
            +rate-button('rate02', 5)

      article.form-elements__buttons
        .form-elements__wrapper
          +range-slider('range slider')
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'buttons')
          .form-elements__button
            +button({
              'typeOfStyle': 'simple', 
              'href':'/mock-address/change-me', 
              'text': 'click me', 
              'style': {
                'width': '99px',
                'height': '44px'
              }
            })
          .form-elements__button
            +button({
              'typeOfStyle': 'faint', 
              'href':'/mock-address/change-me', 
              'text': 'click me', 
              'style': {
                'width': '99px',
                'height': '44px'
              }
            })
          .form-elements__button
            +button({
              'typeOfStyle': 'no-frame', 
              'href':'/mock-address/change-me', 
              'text': 'click me', 
              'style': {
                'width': '99px',
                'height': '44px'
              }
            })
          .form-elements__button
            +button({
              typeOfStyle: 'long', 
              href: '/mock-address/change-me', 
              text: 'click me',
              type: 'submit',
            })
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'pagination')
          +pagination()

      article.form-elements__left-dropdown
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'dropdown')
          +dropdown('furniture')
        .form-elements__wrapper
          +dropdown-checkbox(
            'expandable checkbox list',
            [
              ['checkbox3', 'Завтрак'],
              ['checkbox4', 'Письменный стол'],
              ['checkbox5', 'Стул для кормления'],
              ['checkbox6', 'Кроватка'],
              ['checkbox7', 'Телевизор'],
              ['checkbox8', 'Шампунь'],
              ['checkbox9', 'Телевизор'],
              ['checkbox10', 'Шампунь']
            ]
          )
      
      article.form-elements__left-comments
        .form-elements__wrapper
          +icon-text({
            image: 'insert_emoticon', 
            title: 'Комфорт', 
            descr: 'Шумопоглощающие стены', 
            hasUnderline: true
          })
        .form-elements__wrapper
          +icon-text({
            image: 'location_city', 
            title: 'Удобство', 
            descr: 'Окно в каждой из спален', 
            hasUnderline: true
          })

      article.form-elements__middle-dropdown
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'rich-checkbox')
          +rich-checkbox({ 
            id: 'checkbox13', 
            name: 'checkbox13', 
            headText: 'Широкий коридор', 
            descr: 'Ширина коридоров в номере не менее 91 см.'
          })
          +rich-checkbox({ 
            id: 'checkbox14', 
            name: 'checkbox14', 
            headText: 'Помощник для инвалидов', 
            descr: 'На 1 этаже вас встретит специалист и проводит до номера.'
          })


      article.form-elements__right-dropdown
        .form-elements__wrapper
          .form-elements__heading
            +heading('h3', 'bullet-list')
          +bullet-list(['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])


      article.form-elements__comments
        .form-elements__wrapper
          +comment({
            srcAvatar: './img/avatar1.png', 
            numOfLikes: 11, 
            authorName: 'Мурад Сарафанов', 
            date: '5 дней назад', 
            text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
          })


