extends template



block variables
    - var pageTitle = 'Search room'

block content
  include ../../blocks/heading/heading.pug
  include ../../blocks/form-book-a-room/form-book-a-room.pug
  include ../../blocks/room-preview/room-preview.pug
  include ../../blocks/expandable-checkbox/expandable-checkbox.pug
  include ../../blocks/dropdown/dropdown.pug
  include ../../blocks/dropdown-filter-date/dropdown-filter-date.pug
  include ../../blocks/checkbox-button/checkbox-button.pug
  include ../../blocks/rich-checkbox/rich-checkbox.pug
  include ../../blocks/pagination/pagination.pug
  include ../../blocks/range-slider/range-slider.pug


  .search-room__grid-container
    .search-room__side-bar
      form.search-room__side-bar-inner
        .search-room__filter-date-container
          .search-room__filter-date-heading
            +heading('h3', 'даты пребывания в отеле')
          .search-room__filter-date
            +dropdown-filter-date()
        .search-room__dropdown_guests-container
          .search-room__dropdown_guests-heading
            +heading('h3', 'Гости')
          .search-room__dropdown_guests
            +dropdown('guests')
        .search-room__range-slider
          +range-slider('диапазаон цены')
          p.search-room__range-slider-descr Стоимость за сутки пребывания в номере
        .search-room__checkbox-buttons-container
          .search-room__checkbox-buttons-heading
            +heading('h3', 'checkbox buttons')
          .search-room__checkbox-buttons
            +checkbox-button('checkbox0', 'Можно курить')
            +checkbox-button('checkbox1', 'Можно с питомцами')
            +checkbox-button('checkbox2', 'Можно пригласить гостей (до 10 человек)')
        .search-room__rich-checkbox-container
          .search-room__rich-checkbox-heading
            +heading('h3', 'Доступность')
          .search-room__rich-checkbox
            +rich-checkbox('checkbox13', 'checkbox13', 'Широкий коридор', 'Ширина коридоров в номере не менее 91 см.')
            +rich-checkbox('checkbox14', 'checkbox14', 'Помощник для инвалидов', 'На 1 этаже вас встретит специалист и проводит до номера.')
        .search-room__rich-checkbox-container
          .search-room__rich-checkbox-heading
            +heading('h3', 'Удобства номера')
          .search-room__rich-checkbox
            +dropdown('furniture')

        .search-room__rich-expandable-checkbox
          +expandable-checkbox(
            'Дополнительные удобства',
            [
              ['checkbox3', 'Завтрак'],
              ['checkbox4', 'Письменный стол'],
              ['checkbox5', 'Стул для кормления'],
              ['checkbox6', 'Кроватка'],
              ['checkbox7', 'Телевизор'],
              ['checkbox8', 'Шампунь'],
              ['checkbox9', 'Шампунь']
            ]
          )

    .search-room__title
      +heading('h1', 'Номера, которые мы для вас подобрали')

    .search-room__elements
      +room-preview({number: '888',src: "/../../img/rooms/room888.jpg",price: '9 990',name: 'room888',rate: 5,reviews: '145',islucs: true})
